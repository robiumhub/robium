{
  "id": "rmw-cyclonedds",
  "title": "CycloneDDS RMW",
  "description": "CycloneDDS RMW implementation for ROS 2 - provides DDS communication layer",
  "category": "communication",
  "version": "1.0.0",
  "rosDistros": ["humble", "foxy", "iron"],
  "dependencies": [],
  "apt": ["ros-humble-rmw-cyclonedds-cpp", "ros-humble-cyclonedds"],
  "pip": [],
  "env": {
    "RMW_IMPLEMENTATION": "rmw_cyclonedds_cpp",
    "CYCLONEDDS_URI": "file:///etc/cyclonedds/cyclonedds.xml"
  },
  "setupCommands": [],
  "files": [
    {
      "path": "/etc/cyclonedds/cyclonedds.xml",
      "contents": "<?xml version=\"1.0\" encoding=\"UTF-8\" ?>\n<CycloneDDS>\n  <Domain>\n    <General>\n      <AllowMulticast>true</AllowMulticast>\n      <MaxMessageSize>65500B</MaxMessageSize>\n    </General>\n    <Internal>\n      <Watermarks>\n        <WhcHigh>500kB</WhcHigh>\n      </Watermarks>\n    </Internal>\n    <Tracing>\n      <Verbosity>info</Verbosity>\n      <OutputFile>stdout</OutputFile>\n    </Tracing>\n  </Domain>\n</CycloneDDS>"
    }
  ],
  "bashrcAliases": [
    "alias cyclonedds='export RMW_IMPLEMENTATION=rmw_cyclonedds_cpp'"
  ]
}

