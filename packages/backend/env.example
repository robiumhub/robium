# Database Configuration
# Choose database client: 'postgres' or 'sqlite'
DB_CLIENT=sqlite

# Postgres settings (used when DB_CLIENT=postgres)
DATABASE_URL=postgresql://user:password@localhost:5432/robiumdb
DB_HOST=localhost
DB_PORT=5432
DB_NAME=robiumdb
DB_USER=user
DB_PASSWORD=password

# SQLite settings (used when DB_CLIENT=sqlite)
SQLITE_DIR=./generated
SQLITE_PATH=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=8000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info 