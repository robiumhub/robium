{
  "id": "x11-gui",
  "title": "X11 GUI Support",
  "description": "X11 GUI support for ROS applications - enables GUI tools like RViz, Gazebo, and other X11 applications",
  "category": "gui",
  "version": "1.0.0",
  "rosDistros": ["humble", "foxy", "noetic"],
  "dependencies": [],
  "apt": [
    "x11-apps",
    "x11-utils",
    "x11-xserver-utils",
    "libx11-6",
    "libxext6",
    "libxrender1",
    "libxrandr2",
    "libxinerama1",
    "libxi6",
    "libxfixes3",
    "libxcursor1",
    "libxcomposite1",
    "libxdamage1",
    "libxss1",
    "libxtst6",
    "libxrandr2",
    "libasound2",
    "libgtk-3-0",
    "libgdk-pixbuf2.0-0",
    "libpango-1.0-0",
    "libcairo2",
    "libatk1.0-0",
    "libglib2.0-0",
    "libdbus-1-3"
  ],
  "pip": [],
  "env": {
    "DISPLAY": ":0",
    "QT_X11_NO_MITSHM": "1"
  },
  "setupCommands": [],
  "bashrcAliases": [
    "alias xhost-allow='xhost +local:docker'",
    "alias gui-test='xeyes'"
  ]
}

