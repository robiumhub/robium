{
  "id": "turtlebot4",
  "title": "TurtleBot 4",
  "description": "TurtleBot 4 is a small, affordable, programmable, open source robot for use in education, research, hobby, and product prototyping",
  "category": "robots",
  "version": "1.0.0",
  "rosDistros": ["humble", "foxy"],
  "baseImage": "osrf/ros:humble-ros-base",
  "supportedModules": [
    "navigation2",
    "slam-toolbox",
    "rviz2",
    "gazebo",
    "depthai-oakd"
  ],
  "dependencies": [],
  "apt": [
    "build-essential",
    "cmake",
    "python3-colcon-common-extensions",
    "python3-rosdep",
    "python3-vcstool",
    "wget",
    "git",
    "ros-humble-turtlebot4-description",
    "ros-humble-turtlebot4-msgs",
    "ros-humble-turtlebot4-node",
    "ros-humble-turtlebot4-bringup",
    "ros-humble-turtlebot4-ignition-gui-plugins",
    "ros-humble-turtlebot4-ignition-toolbox",
    "ros-humble-turtlebot4-simulator",
    "ros-humble-turtlebot4-tests"
  ],
  "pip": ["turtlebot4-python-tools"],
  "env": {
    "TURTLEBOT4_MODEL": "standard",
    "TURTLEBOT4_DIAGNOSTICS": "true"
  },
  "setupCommands": [
    "rosdep update",
    "rosdep install --from-paths src --ignore-src -y"
  ],
  "udevRules": [
    "SUBSYSTEM==\"usb\", ATTRS{idVendor}==\"03e7\", ATTRS{idProduct}==\"2150\", MODE=\"0666\"",
    "SUBSYSTEM==\"usb\", ATTRS{idVendor}==\"03e7\", ATTRS{idProduct}==\"2485\", MODE=\"0666\"",
    "SUBSYSTEM==\"usb\", ATTRS{idVendor}==\"03e7\", ATTRS{idProduct}==\"f63b\", MODE=\"0666\""
  ],
  "expose": [11311, 9090, 8080],
  "bashrcAliases": [
    "alias tb4='ros2 launch turtlebot4_bringup turtlebot4.launch.py'",
    "alias tb4-sim='ros2 launch turtlebot4_simulator turtlebot4_simulator.launch.py'"
  ]
}

